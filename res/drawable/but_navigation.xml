<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 默认时的背景图片 -->
    <item android:drawable="@drawable/dianji_bg1"/>
    <!-- 没有焦点时的背景图片 -->
    <item android:drawable="@drawable/dianji_bg1" android:state_window_focused="false"/>
    <!-- 选中时的图片背景 -->
    <item android:drawable="@drawable/dianji_bg2" android:state_selected="true"/>
    <!-- 获得焦点时的图片背景 -->
    <item android:drawable="@drawable/dianji_bg2" android:state_focused="true"/>

</selector>